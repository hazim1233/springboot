<!DOCTYPE html>
<html>
<head>
    <title>Dodaj osobu</title>
</head>
<body>
    <h1>Dodaj osobu</h1>
    <form id="personForm">
        <label for="name">Ime:</label>
        <input type="text" id="name" value="Hazim"><br><br>

        <label for="age">Godine:</label>
        <input type="number" id="age" value="30"><br><br>

        <button type="submit">Dodaj u bazu</button>
    </form>

    <p id="response"></p>

    <hr>

    <h2>Sve osobe</h2>
    <button id="loadPersons">Prikaži osobe</button>
    <ul id="personList"></ul>

    <script>
        const form = document.getElementById('personForm');
        const responseParagraph = document.getElementById('response');
        const loadBtn = document.getElementById('loadPersons');
        const personList = document.getElementById('personList');

        // POST - dodavanje osobe
        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const name = document.getElementById('name').value;
            const age = parseInt(document.getElementById('age').value);

            const data = { name: name, age: age };

            try {
                const res = await fetch('http://localhost:8080/persons', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                if (res.ok) {
                    const result = await res.json();
                    responseParagraph.textContent = `Osoba dodata: ${result.name}, ${result.age} godina`;
                } else {
                    responseParagraph.textContent = `Greška: ${res.status}`;
                }
            } catch (err) {
                responseParagraph.textContent = `Greška: ${err.message}`;
            }
        });

        // GET - preuzimanje svih osoba
        loadBtn.addEventListener('click', async () => {
            personList.innerHTML = ""; // očisti listu pre novog učitavanja
            try {
                const res = await fetch('http://localhost:8080/persons');
                if (res.ok) {
                    const persons = await res.json();
                    if (persons.length === 0) {
                        personList.innerHTML = "<li>Nema osoba u bazi.</li>";
                    } else {
                        persons.forEach(p => {
                            const li = document.createElement('li');
                            li.textContent = `${p.name}, ${p.age} godina (id=${p.id})`;
                            personList.appendChild(li);
                        });
                    }
                } else {
                    personList.innerHTML = `<li>Greška: ${res.status}</li>`;
                }
            } catch (err) {
                personList.innerHTML = `<li>Greška: ${err.message}</li>`;
            }
        });
    </script>
</body>
</html>
